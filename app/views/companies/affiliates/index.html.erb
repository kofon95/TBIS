<div class="btns-card">
  <a href="/" title="Закрыть" class="btn-card icon-closed-card"></a>
  <a href="/" title="На главную" class="btn-card icon-home"></a>
  <div href="/" title="Сортировка списка" class="btn-card icon-sorting"></div>
</div>

<div class="panel-sorting">
  Сортировка списка
</div>
<input class="card-search" type="text" placeholder="Поиск филиала...">

<div class="conten-card">
  <div class="menu-with-options">
    <% if @affiliates.present? %>
      <div class="option active">Все филиалы <%= @total_affiliates %></div>
    <% end %>
  </div>
  <a class="btn icon-plus" href="<%=new_company_affiliate_path%>"></a>
  <div class="cont-category-book">

      <div class="tab-category information-section">
        <% @affiliates.each do |affiliate| %>
          <%= link_to [affiliate.company, affiliate], class: "item-card" do %>
            <div class="left-content">
              <div class="name-content"><%= affiliate.name %></div>
              <span class=""><span style="margin-right: 2px;">Прибыль за месяц</span> <span class="amount">1 441 000 ₽</span></span>
            </div>
            <div class="right-content">
              <div class="people-on-course">121<img src="/images/visitors1.png"></div>
            </div>
          <%end%>
        <% end %>
      </div>
      <div class="tab-category information-section">
        <div class="loading-block">
          <div>
            <div>Нет филиалов</div>
          </div>
        </div>
      </div>
  </div>
</div>