<div id="notice"><%= notice %></div>
<div class="btns-card">
  <a href="/" title="Закрыть" class="btn-card icon-closed-card"></a>
  <a href="/" title="На главную" class="btn-card icon-home"></a>
</div>
<input class="card-search" type="text" placeholder="Поиск филиала...">

<div class="conten-card">
  <div class="menu-with-options">
    <div class="option active">Все филиалы 2</div>
  </div>
  <a class="btn icon-plus" href="<%=new_company_affiliate_path%>"></a>
  <div class="cont-category-book">
    <% @affiliates.each do |affiliate| %>
      <div class="item-card">
        <%= affiliate.name %>
        <%= link_to 'Show', company_affiliate_path(affiliate.company_id, affiliate) %>
        <%= link_to 'Edit', edit_company_affiliate_path(affiliate.company, affiliate) %>
        <%= link_to 'Destroy', company_affiliate_path(affiliate.company_id, affiliate), method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>
  </div>
</div>