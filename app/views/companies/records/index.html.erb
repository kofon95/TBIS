<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Abon period</th>
      <th>Total clients</th>
      <th>Total visits</th>
      <th>Finished at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.name %></td>
        <td><%= record.abon_period %></td>
        <td><%= record.total_clients %></td>
        <td><%= record.total_visits %></td>
        <td><%= record.finished_at %></td>
        <td><%= link_to 'Show', company_record_path(params[:company_id], record) %></td>
        <td><%= link_to 'Edit', edit_company_record_path(params[:company_id], record) %></td>
        <td><%= link_to 'Destroy', company_record_path(params[:company_id], record), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

