<div class="card">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name, return_url: params[:return_url])) do |f| %>
    <div class="title-panel">
      <div class="title-card"><a href="#"><img class="logo" src="/images/logo.png" /></a></div>
    </div>
    <div class="conten-card">
      <div class="menu-with-options">
        <div class="option active">Вход</div>
        <a href="<%=new_user_registration_path%>" class="option">Регистрация</a>
      </div>
      <div class="cont-category-book">
        <div class="tab-category information-section">
          <div class="block-information">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Электронная почта", class: "input-panel" %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Пароль", class: "input-panel" %>
            
            <%= f.submit class: "btn icon-authorization" %>

          </div>
            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, t(:remember_me) %>
              </div>
            <% end -%>

            <%= render "users/shared/links" %>

            <%if flash.present?%>
              <div style="color: red;">
                <%=flash[:alert]%>
              </div>
            <%end%>
        </div>
      </div>
    </div>
  <% end %>
</div>