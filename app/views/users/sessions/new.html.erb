<h2>Log in</h2>

<%if flash.present?%>
  <div style="color: red;">
    <%=flash[:alert]%>
  </div>
<%end%>

<%= form_for(resource, as: resource_name, url: session_path(resource_name, return_url: params[:return_url]), html: {style: "position: relative; z-index: 99;"}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
