<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Patronymic</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.patronymic %></td>
        <td><%= client.birthday %></td>
        <td><%= link_to 'Show', [client.company, client] %></td>
        <td><%= link_to 'Edit', edit_company_client_path(client.company, client) %></td>
        <td><%= link_to 'Destroy', [client.company, client], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

